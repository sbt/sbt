-$ exists sbt-foo/target/scala-2.13

# test safe switching
> clean
> ++ 2.12.12 -v compile
$ exists lib/target/scala-2.12
-$ exists lib/target/scala-2.13
$ exists sbt-foo/target/scala-2.12
-$ exists sbt-foo/target/scala-2.13

